  "repository": {
    "type": "git",
    "url": "https://github.com/retorquere/zotero-cite-columns.git"
  },
  "author": {
    "name": "Emiliano Heyns",
    "email": "emiliano.heyns@han.nl"
  },
  "bugs": {
    "url": "https://github.com/retorquere/zotero-cite-columns/issues"
